{
  "env": {
    "API_TIMEOUT_MS": "3000000",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(mkdir *)",
      "Bash(uv *)",
      "Bash(find *)",
      "Bash(mv *)",
      "Bash(grep *)",
      "Bash(npm *)",
      "Bash(ls *)",
      "Bash(cp *)",
      "Edit",
      "Bash(touch *)",
      "Bash(curl *)",
      "Bash(git *)",
      "Create",
      "Bash(npx *)",
      "Bash(gh pr *)",
      "Bash(supabase *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(openspec *)",
      "Bash(make *)",
      "mcp__mcp-server-starrocks__*"
    ],
    "deny": [
      "Bash(rm -rf *)"
    ]
  },
  "model": "opus",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/user_prompt_submit.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/notification.py"
          },
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code needs your attention\" with title \"Claude Code\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/stop.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/hooks/subagent_stop.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccline",
    "padding": 0
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": false,
    "example-skills@anthropic-agent-skills": false,
    "pyright-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "claude-reflect@claude-reflect-marketplace": false,
    "ast-grep@ast-grep-marketplace": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "skipDangerousModePermissionPrompt": true,
  "hooks2": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ./hooks/pre_tool_use.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ./hooks/post_tool_use.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ./hooks/pre_compact.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ./hooks/session_start.py"
          }
        ]
      }
    ]
  }
}
